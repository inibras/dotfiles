;;;================================================================================;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; Network Module ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;================================================================================;;;
[module/wlan]
type = internal/network
interface = wlp3s0
interval = 0.1

;;; Label - Connected
;format-connected = <label-connected>
format-connected = %{A3:$HOME/.scripts/rofi-wifi-menu.sh:}<label-connected>%{A}
format-connected-padding = 1
label-connected =   %essid%
#label-connected =   %essid%  %upspeed:6%  %downspeed:6%
#label-connected-background = ${colors.green}
label-connected-foreground = ${colors.foreground}
label-connected-padding    = 2
#label-connected =  %upspeed:9%  %downspeed:9%

;;; Label - Disconnected
format-disconnected = %{A3:$HOME/.scripts/rofi-wifi-menu.sh:}<label-disconnected>%{A}
;;;format-disconnected = <label-disconnected>
;format-disconnected-padding = 1
label-disconnected = 睊 Offline
label-disconnected-background = ${colors.red}
label-disconnected-foreground = ${colors.foreground}
label-disconnected-padding    = 2

[module/wired-network]
type = internal/network
interface = enp0s25
;;;interface = ${env:WIRED}
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %{F#000000} %{F-}%local_ip%
label-disconnected = %{F#84A0C6} %{F-}disconnected
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.green}


