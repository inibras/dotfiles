################################################################################
##############                     MODULE POPUP CALENDAR            ############
################################################################################
[module/popup-calendar]
type = custom/script
exec = echo " ";
interval = 5
click-left = _popup-calendar.sh --popup &
;format-prefix = " "
;format-prefix-font = 4
;format-prefix = " "
label-foreground = ${colors.foreground}
################################################################################
############                       MODULE DATE                      ############
################################################################################
[module/date]
type = internal/date
interval = 1.0
date = "%b %d, %Y"
; date-alt = " %a %b %d, %Y"
time = %H:%M%
time-alt = %b %d, %Y
;format-prefix = " "
;format-prefix-foreground = ${color.lg}
;format-foreground = ${color.lg}
label =  %time%
label-foreground = ${colors.foreground}
label-padding    = 1
;label-maxlen = 40%

