	$HOME/.scripts/webcam

alt + s
	killall ffmpeg 

###########
#  Ranger #
###########
super + r
	urxvt -e ranger

# Terminal
super + Return
	urxvt
# Terminal
ctrl + alt + t
	konsole

# Web browser
super + {_,shift + }w
	google-chrome-stable
