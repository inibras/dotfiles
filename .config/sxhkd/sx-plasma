##############
# Media keys #
##############
## MPV_Playlist Menu
alt + y
        $HOME/bin/rofi_mpvtube

## Volume control
#XF86Audio{RaiseVolume,LowerVolume,Mute}
#	amixer {-q set Master 5%+,-q set Master 5%-,set Master toggle}
	
## Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# Volume
#{XF86AudioMute,XF86AudioLowerVolume,XF86AudioRaiseVolume}
#	pamixer -q set Master {toggle,10%- unmute,10%+ unmute}

XF86AudioMute
	pamixer --toggle-mute
XF86AudioLowerVolume
	pamixer -d 5
XF86AudioRaiseVolume
	pamixer -i 5

# Player
{XF86AudioPrev,XF86AudioPlay,XF86AudioNext}
	playerctl {previous,play-pause,next}

# Brightness
XF86MonBrightnessUp
    light -A 5

XF86MonBrightnessDown
     light -U 5


# Screenshot 
# maim soft
{_,ctrl + ,alt + }Print
	 $HOME/.scripts/shotify
#scrot {_,-s,-i $(xdotool getactivewindow)} --noopengl \
#| xclip -selection clipboard -t image/png -i && \
#notify-send -t 1000 "Sceenshot" "Copied to clipboard"
shift + {_,ctrl + ,alt + }Print
         $HOME/.config/rofi/scripts/screenshot.sh   
#mkdir -p $HOME/Pictures/Screenshots/ && \
