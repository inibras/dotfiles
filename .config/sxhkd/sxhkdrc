###########
# Windows #
###########
# graceful exit (calls modified crunchbang exit script)
# if systemd is in use, need to modify /etc/systemd/logind.conf to ignore power button events
{XF86PowerOff}
    /usr/local/bin/bspwm-exit
# BSPWM HOTKEYS

# quit/restart bspwm
super + shift + {q,r,l}
	bspc {quit,wm -r}
# Locker
alt + l
	i3lock-fancy
# Close or kill window
super + {_,ctrl + }q
	bspc node -{c,k}
# Focus or swap window in the current workspace
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
# Focus the given workspace or move window to that workspace
super + {_,shift + }{1-6}
	bspc {desktop -f, node -d} '^{1-6}'
# Focus the next/previous window
super + {_,shift + }grave
	bspc node -f {next,prev}.local
# Focus the last workspace
super + Tab
	bspc desktop -f last
# alternate between the tiled and monocle layout
super + {_,shift + }f
	bspc {desktop -l next,node -t fullscreen}

# rotate current node 90 degrees
super + y
	bspc node @focused:/ -R 90


#############
# Preselect #
#############

# Preselect the direction
super + p ; {h,j,k,l}
	bspc node -p {west,south,north,east}
# Cancel the preselection for the focused desktop
super + p ; c
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

##############
# Properties #
##############

## Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
## Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Toggle floating
super + shift + space
    bspc node -t floating || bspc node -t pseudo_tiled

# Toggle Tiling
super + {_,shift + }t
    bspc node -t tiled

# Toggle sticky flag
super + s
	bspc node -g sticky
# Toggle monocle layout
#super + m
#    bspc desktop -l next
# Toggle gaps
super + shift + d
	bspc config window_gap {0,15}
# Increase/descrease gap size
super { ,+ shift }+ z
	bspc config window_gap $(($(bspc config window_gap) {+,-} 3))

